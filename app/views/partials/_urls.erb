<table class='table table-hover'>
  <thead>
    <tr>
      <th>URL Stats</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @client.urls.ordered_by_requested.each do |k, v| %>
      <tr>
        <td><%= k %></td>
        <td class="text-right"><%= v %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>URLs</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @client.urls.all.each do |path| %>
      <tr>
        <td><a href=("localhost:9393/sources/<%= @client.identifier %>")<%= path %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>
